@model BrnShop.Web.Admin.Models.FullSendPromotionModel

@section header{
    <title>添加满赠促销</title>
    <link type="text/css" rel="stylesheet" href="/administration/content/css/site.css"/>
    <script type="text/javascript" src="/administration/scripts/jquery.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.unobtrusive.js"></script>
    <script type="text/javascript" src="/administration/content/my97datepicker/WdatePicker.js"></script>
}   

@section body{
<h1 class="rightH1">
满赠促销 &gt;&gt; 添加促销
<div class="right">
<a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT"><img src="/administration/content/images/goback.jpg"/>返回列表</a>
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>

@using (Html.BeginForm())
{
<div class="addTable">
<table width="100%">
          <tr>
    <td width="106px" align="right">活动名称：</td>
    <td>@Html.TextBoxFor(x => x.PromotionName, new { @class = "input", size = "70" })@Html.ValidationMessageFor(x => x.PromotionName)</td>
    </tr>

    <tr>
    <td align="right">活动时间：</td>
    <td>
    
            @Html.TextBoxFor(x => x.StartTime, new { @class = "input", size = "18", onfocus = "WdatePicker({el:'StartTime'})" })
        至
        @Html.TextBoxFor(x => x.EndTime, new { @class = "input", size = "18", onfocus = "WdatePicker({el:'EndTime'})" })
        @Html.ValidationMessageFor(x => x.StartTime)
        @Html.ValidationMessageFor(x => x.EndTime)
    
    </td>
    </tr>
                                  <tr>
    <td align="right">最低用户等级：</td>
    <td>@Html.DropDownListFor(x => x.UserRankLower, ViewData["userRankList"] as List<SelectListItem>) @Html.ValidationMessageFor(x => x.UserRankLower)</td>
    </tr>
              <tr>
    <td align="right">活动额度：</td>
    <td>@Html.TextBoxFor(x => x.LimitMoney, new { @class = "input", size = "8" })@Html.ValidationMessageFor(x => x.LimitMoney)元</td>
    </tr>
              <tr>
    <td align="right">补充额度：</td>
    <td>@Html.TextBoxFor(x => x.AddMoney, new { @class = "input", size = "8" })@Html.ValidationMessageFor(x => x.AddMoney)元</td>
    </tr>

<tr>
            <td align="right">
                状态：
            </td>
            <td>
                <p>
                    <label>@Html.RadioButtonFor(x => x.State, 1, new { @class = "checkbox" })启动</label>
                    <label>@Html.RadioButtonFor(x => x.State, 0, new { @class = "checkbox" })暂停</label>
                    <br />
                </p>
            </td>
        </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>
    <a href="" class="addBt" id="sumbitBut" ><img src="/administration/content/images/submit.jpg" /></a>
            <script type="text/javascript">
                $(function () {
                    $("#sumbitBut").click(function () {
                        $("form:first").submit();
                        return false;
                    })
                });
        </script>
    </td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>&nbsp;</td>
    </tr>
</table>
</div>
}
}