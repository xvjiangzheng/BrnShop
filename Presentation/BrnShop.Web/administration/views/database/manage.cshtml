    <td width="76px" align="right">SQL语句：</td>
    <td>
    <br />
        <form action="@Url.Action("runsql")" method="post" id="RunSQL">
            <textarea cols="40"  rows="6" id="Sql" name="Sql"></textarea>
            <a href="" onclick="return RunSql()"><img src="/administration/content/images/submit.jpg" /></a>
            <script type="text/javascript">
                function RunSql() {
                    if ($("#Sql").val() == "") {
                        alert("SQL语句不能为空！");
                    }
                    else {
                        $("#RunSQL").submit();
                    }
                    return false;
                }
            </script>
        </form>
