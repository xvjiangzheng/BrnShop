@model BrnShop.Web.Admin.Models.SMSModel

@section header{
    <title>短信设置</title>
    <link type="text/css" rel="stylesheet" href="/administration/content/css/site.css"/>
    <script type="text/javascript" src="/administration/scripts/jquery.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.unobtrusive.js"></script>
}

@section body{
<h1 class="rightH1">
系统设置 &gt;&gt; 短信设置
<div class="right">
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>
@using (Html.BeginForm())
{
<div class="addTable">
<table width="100%">
         <tr>
    <td width="106px" align="right">地址：</td>
    <td>
    @Html.TextBoxFor(x => x.Url, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.Url)
    </td>
    </tr>

     <tr>
    <td align="right">账号：</td>
    <td>
   @Html.TextBoxFor(x => x.UserName, new { @class = "input", size = "35" })@Html.ValidationMessageFor(x => x.UserName)
    </td>
    </tr>

         <tr>
    <td align="right">密码：</td>
    <td>
    <input class="input" data-val="true" data-val-required="密码不能为空！" id="Password" name="Password" size="35" type="password" value="@Model.Password" />
   @Html.ValidationMessageFor(x => x.Password) 
    </td>
    </tr>

                      <tr>
    <td align="right">找回密码内容：</td>
    <td>
    <p>@Html.TextAreaFor(x => x.FindPwdBody, new { cols = "40", rows = "6" }){shopname}代表商城名称,{code}代表验证码 @Html.ValidationMessageFor(x => x.FindPwdBody)</p>
    <br />
    </td>
        </tr>

          <tr>
    <td align="right">验证手机内容：</td>
    <td>
    <p>@Html.TextAreaFor(x => x.SCVerifyBody, new { cols = "40", rows = "6" }){shopname}代表商城名称,{code}代表验证码 @Html.ValidationMessageFor(x => x.SCVerifyBody)</p>
    <br />
    </td>
        </tr>

                  <tr>
    <td align="right">更新手机内容：</td>
    <td>
    <p>@Html.TextAreaFor(x => x.SCUpdateBody, new { cols = "40", rows = "6" }){shopname}代表商城名称,{code}代表验证码 @Html.ValidationMessageFor(x => x.SCUpdateBody)</p>
    <br />
    </td>
        </tr>

    <tr>
    <td align="right">注册欢迎内容：</td>
    <td>
    <p>@Html.TextAreaFor(x => x.WebcomeBody, new { cols = "40", rows = "6" }){shopname}代表商城名称,{regtime}代表注册时间,{mobile}代表手机号 @Html.ValidationMessageFor(x => x.WebcomeBody)</p>
    <br />
    </td>
        </tr>

    <tr>
    <td align="right">&nbsp;</td>
    <td>
    <a href="" class="addBt" id="sumbitBut" ><img src="/administration/content/images/submit.jpg" /></a>
            <script type="text/javascript">
                $(function () {
                    $("#sumbitBut").click(function () {
                        $("form:first").submit();
                        return false;
                    })
                });
        </script>
    </td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>&nbsp;</td>
    </tr>
</table>
</div>
}
}
