@model BrnShop.Web.Admin.Models.AddSKUModel

@section header{
    <title>添加SKU</title>
    <link type="text/css" rel="stylesheet" href="/administration/content/css/site.css"/>
    <script type="text/javascript" src="/administration/scripts/jquery.js"></script>
    <script type="text/javascript" src="/administration/content/ueditor/ueditor.config.js"></script>
    <script type="text/javascript" src="/administration/content/ueditor/ueditor.all.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.unobtrusive.js"></script>
    <link type="text/css" href="/administration/content/jbox/Skins/Default/jbox.css" rel="stylesheet" />
    <script type="text/javascript" src="/administration/content/jbox/jquery.jBox-2.3.min.js"></script>
    <script type="text/javascript" src="/administration/scripts/selectlist.js"></script>
    <script type="text/javascript" src="/administration/scripts/product.js"></script>
    <script type="text/javascript">
        productPageType = 3;

       @{
            StringBuilder productSKUItemListStr = new StringBuilder();
            if(Model.AttrValueIdList!=null && Model.AttrValueIdList.Length>0)
            {
                productSKUItemListStr.Append("[");
                for (int i = 0;i < Model.AttrValueIdList.Length; i++)
                {
                    productSKUItemListStr.AppendFormat("{0}'attrId':'{1}','attrValueId':'{2}','inputValue':'{3}'{4},", "{", Model.AttrIdList[i], Model.AttrValueIdList[i], Model.AttrInputValueList[i], "}");
                }
                productSKUItemListStr.Remove(productSKUItemListStr.Length - 1, 1);
                productSKUItemListStr.Append("]");
            }
            else
            {
                productSKUItemListStr.Append("null");
            }
             
         }
       //商品sku项列表
       productSKUItemList = @Html.Raw(productSKUItemListStr.ToString()); 
    </script>
}
@section body{
    <h1 class="rightH1">
        商品管理 &gt;&gt; 添加SKU
        <div class="right">
            <a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT">
                <img src="/administration/content/images/goback.jpg" />返回列表</a>
            <div class="clear">
            </div>
        </div>
        <div class="clear">
        </div>
    </h1>
    <ul class="addTag">
        <li class="hot"><a href="javascript:;">基本信息</a></li>
        <li><a href="javascript:;">规格信息</a></li>
        <li><a href="javascript:;">辅助信息</a></li>
        <li><a href="javascript:;">详细描述</a></li>
        <div class="clear">
        </div>
    </ul>
    @using (Html.BeginForm())
    {
        <div class="addTable">
            <table width="100%">
                <tr>
                    <td width="94px" align="right">
                        商品名称：
                    </td>
                    <td>
                        @Html.TextBoxFor(x => x.ProductName, new { @class = "input", size = "80" })
                        @Html.ValidationMessageFor(x => x.ProductName)
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        商品分类：
                    </td>
                    <td>
                        <div class="selectBt" style="float: left;">
                            <input type="button" value="@Model.CategoryName" onclick="openCategorySelectLayer(this)" />
                            <input type="hidden" class="CateId" id="CateId" name="CateId" value="@Model.CateId" />
                            <input type="hidden" class="CategoryName" id="CategoryName" name="CategoryName" value="@Model.CategoryName" />
                        </div>
                        @Html.ValidationMessageFor(x => x.CateId)
                    </td>
                </tr>
                <tr>
                    <td align="right">
                        商品品牌：
                    </td>
