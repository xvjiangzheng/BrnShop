@model BrnShop.Web.Admin.Models.SignProductModel

@section header{
    <title>添加签名商品</title>
    <link type="text/css" rel="stylesheet" href="/administration/content/css/site.css"/>
    <script type="text/javascript" src="/administration/scripts/jquery.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.js"></script>
    <script type="text/javascript" src="/administration/scripts/jquery.validate.unobtrusive.js"></script>
    <link href="/administration/content/jbox/Skins/Default/jbox.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="/administration/content/jbox/jquery.jBox-2.3.min.js"></script>
    <script type="text/javascript" src="/administration/scripts/selectlist.js"></script>
}   

@section body{
<h1 class="rightH1">
商品管理 &gt;&gt; 添加签名商品
<div class="right">
<a href="@Html.Raw(ViewData["referer"].ToString())" class="menuBT"><img src="/administration/content/images/goback.jpg"/>返回列表</a>
<div class="clear"></div>
</div>
<div class="clear"></div>
</h1>

@using (Html.BeginForm())
{
<div class="addTable">
<table width="100%">
    <tr>
        <td width="56px" align="right">
            商品：
        </td>
        <td>
            <div class="selectBt">
                <input type="button" value="选择商品" onclick="openProductSelectLayer(this)"/>
                <input type="hidden" class="Pid" id="Pid" name="Pid" value="@Model.Pid" />
                <input type="hidden" class="ProductName" id="ProductName" name="ProductName" value="@Model.ProductName" />
            </div>
        </td>
    </tr>
<tr>
<td align="right">
    签名：
</td>
    <td>@Html.TextBoxFor(x => x.Sign, new { @class = "input", size = "15" })@Html.ValidationMessageFor(x => x.Sign)</td>
</tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>
    <a href="" class="addBt" id="sumbitBut" ><img src="/administration/content/images/submit.jpg" /></a>
            <script type="text/javascript">
                $(function () {
                    $("#sumbitBut").click(function () {
                        $("form:first").submit();
                        return false;
                    })
                });
        </script>
    </td>
    </tr>
  <tr>
    <td align="right">&nbsp;</td>
    <td>&nbsp;</td>
    </tr>
</table>
</div>
}
}